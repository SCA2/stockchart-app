nav.navbar.navbar-toggleable-md.navbar-light.bg-faded
  button.navbar-toggler.navbar-toggler-right(type="button" data-toggle="collapse" data-target="#navbar-collapse-1")
    span.navbar-toggler-icon
  a.navbar-brand(href="/") FCC Nightlife App
  .collapse.navbar-collapse#navbar-collapse-1
    form.form-inline.my-2.my-lg-0(action=href='/search' method='post')
      input.form-control.mr-sm-2(type="text" name='location' placeholder="Oakland, CA")
      button.btn.btn-outline-success.my-2.my-sm-0(type="submit") Search
    ul.navbar-nav.ml-auto
      li.nav-item(style={margin: '7px 30px 0px 0px'})
        a.nav-link.twitter-share-button(href="https://twitter.com/share" data-show-count="false" data-size="large") Tweet
      if isLoggedIn
        li.nav-item
          a.nav-link(href="/profile") Profile
      if isLoggedIn
        li.nav-item
          a.nav-link(href="/logout") Logout
      else
        li.nav-item
          a.nav-link(href="/login")
            img(src='/public/img/sign-in-with-twitter-gray.png')

script(async src="//platform.twitter.com/widgets.js" charset="utf-8")